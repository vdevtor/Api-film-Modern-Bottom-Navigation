<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/ivFilme"
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_margin="13dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tvNameFilme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textSize="15sp"
        android:textAlignment="center"

        android:elevation="5dp"
        android:textColor="@color/white"
        android:text="Deu a louca na chaopeuzinho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFilme"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/tvAnoFilme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:elevation="5dp"
        android:text="2007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameFilme"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal" />




</androidx.constraintlayout.widget.ConstraintLayout>